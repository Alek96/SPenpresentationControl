<?xml version="1.0" encoding="utf-8"?>
<remote-actions version="1.2">
    <action
        id="swipe_right"
        label="@string/shutter"
        priority="1"
        trigger_key="CTRL_LEFT+A">
        <preference name="gesture" value="click|swipe_right"/>
    </action>

    <action
        id="swipe_left"
        label="@string/camera_switch"
        priority="2"
        trigger_key="CTRL_LEFT+B">
        <preference name="gesture" value="double_click|swipe_left"/>
    </action>

    <action
        id="swipe_up"
        label="@string/next_filter"
        priority="3"
        trigger_key="CTRL_LEFT+C">
        <preference name="gesture" value="swipe_up"/>
    </action>

    <action
        id="swipe_down"
        label="@string/prev_filter"
        priority="4"
        trigger_key="CTRL_LEFT+D">
        <preference name="gesture" value="swipe_down"/>
    </action>

